<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class table="news" name="com.hzih.mmcs.domain.News">
        <id name="nid" type="java.lang.Integer" >
            <column name="nid" />
            <generator class="native" />
        </id>
        <property name="title" column="title" access="field" type="java.lang.String"/>
        <property name="content" column="content" access="field" type="java.lang.String"/>
        <property name="files" column="files" access="field" type="java.lang.String"/>
        <property name="time" column="time" access="field" type="java.util.Date"/>
        <property name="classname" column="classname" access="field" type="java.lang.String"/>
    </class>
</hibernate-mapping>